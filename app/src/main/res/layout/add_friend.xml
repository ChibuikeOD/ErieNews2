<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andtoid="http://schemas.android.com/tools"
    android:background="@drawable/bgb"

    >
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="0.2in"
        android:src="@drawable/brown2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/brown2"
        />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="603dp"
        android:src="@drawable/cooltext445170824846131"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="3in"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="35dp"
        app:cardBackgroundColor="#d7a45a"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding = "28dp"

            >

            <TextView
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Add Friend"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />

            <EditText
                android:id = "@+id/edittext20"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint = "Friend Name"
                android:textColor="@color/white"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"




                >

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"

                    />

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_marginLeft="130dp"
                    />
            </LinearLayout>





        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>