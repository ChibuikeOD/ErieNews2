<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bgb"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="0.2in"
        android:src="@drawable/brown2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/brown2"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cooltext445170824846131" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="3in"
        app:cardCornerRadius="35dp"
        app:cardBackgroundColor="#d7a45a"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4in"
            android:orientation="vertical"
            android:padding = "28dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="32dp"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Email Code"
                android:textStyle="bold"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint = "EmailCode"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:hint="password"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textStyle="bold"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/passwordReEntry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:hint="confirmPassword"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="2in"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Back" />


                <Button
                    android:id="@+id/button"
                    android:layout_width="2in"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Send Code" />

            </LinearLayout>

            <Button
                android:id="@+id/resetButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Reset Password" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>