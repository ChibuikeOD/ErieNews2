<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bgb"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="0.2in"
        android:src="@drawable/brown2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/brown2"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cooltext445170824846131" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="3in"
        app:cardCornerRadius="35dp"
        app:cardBackgroundColor="#d7a45a"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4in"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eriega"
                android:text="Event Name"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:src="@drawable/fair_picture" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/15/2023 00:00 - 10/21/2023 23:59"
                android:textColor="@color/white"
                android:textSize="16dp"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eriega"
                android:text="Address"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eriega"
                android:text="Description goes here."
                android:textColor="@color/white"
                android:textSize="16dp" />

            />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link to site"
                android:fontFamily="@font/eriega"
                android:textColor="@color/white"
                android:textSize="16dp" />
            />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1.0">

                <Button
                    android:id="@+id/eventBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:text="Back" />

                <Button
                    android:id="@+id/addEventButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:text="Add Event"

                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>